		"@vitejs/plugin-react": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^4.3.0",
		"@ionic/core": "^8.6.1",
		"@ionic/react": "^8.6.1",
		"@ionic/react-router": "^8.6.1",
		"ionicons": "^8.0.9",
		"mammoth": "^1.9.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	}
